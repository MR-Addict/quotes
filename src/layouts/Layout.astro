---
export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro Sayings' />
    <meta name='viewport' content='width=device-width' />
    <link rel='shortcut icon' href='/favicon.ico' type='image/x-icon' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style lang='scss'>
  body {
    @apply px-5 py-5 min-h-[100dvh] flex flex-col items-center justify-center;
  }
</style>
